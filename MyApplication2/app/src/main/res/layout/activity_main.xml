<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
 <FrameLayout
     android:id="@+id/main_content"
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_weight="1">
 </FrameLayout>
 <RadioGroup
     android:id="@+id/main_bottom_tabs"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal">
  <LinearLayout
      android:id="@+id/nav1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:padding="6dp"
      android:orientation="vertical">
   <TextView
       android:id="@+id/nav1_icon"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="@color/gray"
       android:layout_gravity="center"
       android:textSize="15dp"
       android:text="@string/fa_home"/>
   <TextView
       android:id="@+id/nav1_text"
       android:layout_width="wrap_content"
       android:layout_gravity="center"
       android:layout_height="wrap_content"
       android:textColor="@color/gray"
       android:textSize="15dp"
       android:text="首页"/>
  </LinearLayout>
  <LinearLayout
      android:id="@+id/nav2"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:padding="5dp"
      android:orientation="vertical">
   <TextView
       android:id="@+id/nav2_icon"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="@color/gray"
       android:layout_gravity="center"
       android:textSize="15dp"
       android:text="@string/fa_group"/>
   <TextView
       android:id="@+id/nav2_text"
       android:layout_width="wrap_content"
       android:layout_gravity="center"
       android:layout_height="wrap_content"
       android:textColor="@color/gray"
       android:textSize="15dp"
       android:text="群聊"/>
  </LinearLayout>
  <LinearLayout
      android:id="@+id/nav3"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:padding="5dp"
      android:orientation="vertical">
   <TextView
       android:id="@+id/nav3_icon"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="@color/gray"
       android:layout_gravity="center"
       android:textSize="15dp"
       android:text="@string/fa_drivers_license"/>
   <TextView
       android:id="@+id/nav3_text"
       android:layout_width="wrap_content"
       android:layout_gravity="center"
       android:layout_height="wrap_content"
       android:textColor="@color/gray"
       android:textSize="15dp"
       android:text="通迅录"/>
  </LinearLayout>
  <LinearLayout
      android:id="@+id/nav4"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:padding="5dp"
      android:orientation="vertical">
   <TextView
       android:id="@+id/nav4_icon"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="@color/gray"
       android:layout_gravity="center"
       android:textSize="15dp"
       android:text="@string/fa_comment"/>
   <TextView
       android:id="@+id/nav4_text"
       android:layout_width="wrap_content"
       android:layout_gravity="center"
       android:layout_height="wrap_content"
       android:textColor="@color/gray"
       android:textSize="15dp"
       android:text="消息"/>
  </LinearLayout>
  <LinearLayout
      android:id="@+id/nav5"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:padding="5dp"
      android:orientation="vertical">
   <TextView
       android:id="@+id/nav5_icon"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="@color/gray"
       android:layout_gravity="center"
       android:textSize="15dp"
       android:text="@string/fa_user"/>
   <TextView
       android:id="@+id/nav5_text"
       android:layout_width="wrap_content"
       android:layout_gravity="center"
       android:layout_height="wrap_content"
       android:textColor="@color/gray"
       android:textSize="15dp"
       android:text="我的"/>
  </LinearLayout>
 </RadioGroup>
</LinearLayout>